{
  "name": "Xiaomi Mi Scale",
  "version": "0.12",
  "slug": "xiaomi_mi_scale",
  "description": "Read weight measurements from scale via BLE",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "before",
  "boot": "auto",
  "devices": [],
  "host_network": true,
  "privileged": ["NET_ADMIN", "SYS_ADMIN"],
  "options" : {
    "miscale_mac": "00:00:00:00:00:00",
    "mqtt_prefix": "miScale",
    "mqtt_host": "127.0.0.1",
    "mqtt_username": "username",
    "mqtt_password": "password",
    "mqtt_port": 1883,
    "mqtt_timeout": 30,
    "users": [
      {"name": "Roman", "weight_greater_than": 75, "weight_lower_than": 90, "height": 180, "sex": "male", "birthdate": "2018-24-01"}
    ]
  },
  "schema" : {
    "miscale_mac": "str",
    "mqtt_prefix": "str?",
    "mqtt_host": "str?",
    "mqtt_port": "port?",
    "mqtt_timeout": "int(1,300)?",
    "mqtt_username": "str",
    "mqtt_password": "str",
    "users": [
      {"name": "str", "weight_greater_than": "int", "weight_lower_than": "int", "height": 100, "sex": "list(male|female)", "birthdate": "match(^[12]\\d{3}-(0[1-9]|1[0-2])-(0[1-9]|[12]\\d|3[01])$)"}
    ]
  }
}